<%= content_tag :div, attributes do %>
  <% if avatars.size <= 4 %>
    <% avatars.each do |avatar| %>
      <%= render(avatar) %>
    <% end %>
  <% else %>
    <% avatars.first(3).each do |avatar| %>
      <%= render(avatar) %>
    <% end %>
    <%= content_tag :a, href: attributes[:href], class: "flex items-center justify-center w-10 h-10 text-xs font-medium text-white bg-gray-700 border-2 border-white rounded-full hover:bg-gray-600 dark:border-gray-800" do %>
      +<%= avatars.size - 3 %>
    <% end %>
  <% end %>
<% end %>
