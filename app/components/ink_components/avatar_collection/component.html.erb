<%= content_tag :div, attributes do %>
  <% if avatars.size <= 4 %>
    <% avatars.each do |avatar| %>
      <%= avatar %>
    <% end %>
  <% else %>
    <% avatars.first(3).each do |avatar| %>
      <%= avatar %>
    <% end %>
    <%= content_tag :a, link_plus_attributes do %>
      <%= remaining_avatar_count %>
    <% end %>
  <% end %>
<% end %>